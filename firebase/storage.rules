rules_version = '2';
// Media: /schools/{schoolId}/children/{childId}/media, meal options: /schools/{schoolId}/mealOptions, events: /schools/{schoolId}/events

service firebase.storage {
  match /b/{bucket}/o {
    match /schools/{schoolId}/children/{childId}/media/{allPaths=**} {
      allow read: if request.auth != null
        && (request.auth.token.schoolId == schoolId
            || request.auth.token.role == 'super_admin'
            || (request.auth.token.role == 'parent' && firestore.get(/databases/(default)/documents/schools/$(schoolId)/children/$(childId)).data.parentIds.hasAny([request.auth.uid])));
      allow write: if request.auth != null && request.auth.token.schoolId == schoolId && request.auth.token.role == 'teacher';
    }
    match /schools/{schoolId}/mealOptions/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.token.schoolId == schoolId || request.auth.token.role == 'super_admin');
      allow write: if request.auth != null && request.auth.token.schoolId == schoolId && (request.auth.token.role == 'principal' || request.auth.token.role == 'super_admin');
    }
    match /schools/{schoolId}/events/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.token.schoolId == schoolId || request.auth.token.role == 'super_admin');
      allow write: if request.auth != null && request.auth.token.schoolId == schoolId && (request.auth.token.role == 'principal' || request.auth.token.role == 'teacher' || request.auth.token.role == 'super_admin');
    }
  }
}
